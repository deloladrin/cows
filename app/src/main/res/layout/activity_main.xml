<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_light"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_main"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_company_image"
                    android:layout_width="@dimen/size_main_image"
                    android:layout_height="@dimen/size_main_image"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/main_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_big" />

            </LinearLayout>

            <com.wefika.flowlayout.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_companies"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_company"
                    android:src="@drawable/icon_company" />

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_cow"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_cow"
                    android:src="@drawable/icon_cow" />

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_records"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_record"
                    android:src="@drawable/icon_record" />

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_diagnoses"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_diagnosis"
                    android:src="@drawable/icon_diagnosis" />

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_resources"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_resource"
                    android:src="@drawable/icon_resource" />

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_statuses"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_status"
                    android:src="@drawable/icon_status" />

                <com.deloladrin.cows.views.ImageTextButton
                    android:id="@+id/main_export"
                    android:layout_width="@dimen/size_main_button"
                    android:layout_height="@dimen/size_main_button"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:background="@color/button_dark"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium"
                    android:text="@string/activity_export"
                    android:src="@drawable/icon_export" />

            </com.wefika.flowlayout.FlowLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>