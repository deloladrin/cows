<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_cow_entry"
    android:background="@color/back_dark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/entry_type"
        android:layout_width="@dimen/size_cow_entry"
        android:layout_height="@dimen/size_cow_entry"
        android:gravity="center"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        android:textColor="@color/text_tint" />

    <TextView
        android:id="@+id/entry_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_light" />

    <TextView
        android:id="@+id/entry_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_light" />

    <ImageButton
        android:id="@+id/entry_delete"
        android:layout_width="@dimen/size_cow_entry"
        android:layout_height="@dimen/size_cow_entry"
        android:background="@drawable/icon_delete"
        android:backgroundTint="@color/button_bad"
        android:backgroundTintMode="screen" />

</LinearLayout>