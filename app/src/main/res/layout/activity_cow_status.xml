<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cows="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_dark"
    android:orientation="horizontal">

    <com.deloladrin.cows.views.CircleTextView
        android:id="@+id/status_type"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:gravity="center"
        cows:strokeColor="@color/text_tint"
        cows:strokeWidth="8.0"
        android:textStyle="bold"
        android:textColor="@color/text_tint_dark"
        android:textSize="12pt" />

    <com.deloladrin.cows.activities.cow.ToggleResourceContainer
        android:id="@+id/status_resources"
        android:layout_width="0dp"
        android:layout_height="24pt"
        android:layout_weight="1"
        android:gravity="right"
        cows:disabledStrokeColor="@color/text_disabled"
        cows:strokeColor="@color/text_tint"
        cows:strokeWidth="8.0"
        android:orientation="horizontal" />

</LinearLayout>