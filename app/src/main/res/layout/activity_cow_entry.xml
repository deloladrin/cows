<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="24pt"
    android:paddingBottom="4dp"
    android:background="@color/back_dark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/entry_type"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:gravity="center"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textColor="@color/text_tint" />

    <TextView
        android:id="@+id/entry_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="8pt"
        android:textColor="@color/text_light" />

    <TextView
        android:id="@+id/entry_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="8pt"
        android:textColor="@color/text_light" />

    <TextView
        android:id="@+id/entry_user"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="8pt"
        android:textStyle="italic"
        android:textColor="@color/text_light" />

    <ImageButton
        android:id="@+id/entry_show"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:background="@drawable/icon_show" />

    <ImageButton
        android:id="@+id/entry_delete"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:background="@drawable/icon_delete"
        android:backgroundTint="@color/button_bad"
        android:backgroundTintMode="screen" />

</LinearLayout>