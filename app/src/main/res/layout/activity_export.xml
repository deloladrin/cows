<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/back_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/export_image"
            android:layout_width="@dimen/size_entry"
            android:layout_height="@dimen/size_entry"
            android:src="@drawable/icon_export" />

        <TextView
            android:id="@+id/export_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_medium"
            android:text="@string/activity_export" />

    </LinearLayout>

    <include layout="@layout/activity_export_date"
        android:id="@+id/export_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/activity_export_settings"
        android:id="@+id/export_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/export_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_tint"
        android:textColor="@color/text_light"
        android:textSize="@dimen/text_small"
        android:text="@string/dialog_export" />

</LinearLayout>