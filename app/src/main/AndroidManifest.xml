<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deloladrin.cows">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/icon_app"
        android:roundIcon="@mipmap/icon_app_round"
        android:theme="@style/Cows.Dark"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name=".activities.main.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activities.company.CompanyActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.company.cow.CompanyCowActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.cow.CowActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.record.RecordActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.export.ExportActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.diagnosis.DiagnosisActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.resource.ResourceActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.status.StatusActivity" android:screenOrientation="portrait" />

    </application>

</manifest>