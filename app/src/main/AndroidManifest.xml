<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deloladrin.cows">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".storage.DatabaseApplication"
        android:label="@string/global_name"
        android:icon="@drawable/global_icon"
        android:roundIcon="@drawable/global_icon"
        android:theme="@style/Cows"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".model.ModelActivity"
            android:screenOrientation="landscape" />

    </application>

</manifest>